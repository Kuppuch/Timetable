@model LessionContainer

@{
    ViewBag.Title = "Lesson";
}

<h2>Lesson</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <button id="modalBtn" class="btn">Создать</button>
</p>

<div id="modalWindow" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <select>
            <option value="0">Выберите из дисциплину</option>
            @foreach (var item in Model.GetDisciplines()) {
                <option>
                    @Html.DisplayFor(modelItem => item.Name)
                </option>

            }
        </select>
        <select>
            <option value="0">Выберите группу</option>
            @foreach (var item in Model.GetGroups()) {
                <option>
                    @Html.DisplayFor(modelItem => item.Name)@Html.DisplayFor(modelItem => item.Year)
                </option>
            }
        </select>
        <select>
            <option value="Выберите преподавателя"></option>
            @foreach (var item in Model.GetUsers()) {
                <option>
                    @Html.DisplayFor(modelItem => item.Name)
                </option>
            }
        </select>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GetLessons().First().Discipline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetLessons().First().Group)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetLessons().First().Teacher)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.GetLessons()) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisciplineText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherText)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
