@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LessonText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeekDay)
        </td>
