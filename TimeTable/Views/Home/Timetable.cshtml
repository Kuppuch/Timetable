@model IEnumerable<TimeTable.Models.Timetable>

@{
    ViewBag.Title = "Timetable";
}

<h2>Timetable</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LessonText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeekDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numerator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LessonNumber)
        </th>
        <th>
